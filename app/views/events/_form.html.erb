<%= form_for @event, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :date, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :date, :id => 'datepick', :placeholder => "YYYY-MM-DD" %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :time, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :time, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :title, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :title, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :website, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :website, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :location, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :location, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :results_url, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :results_url, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :photo_url, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :photo_url, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :grand_prix_points, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :grand_prix_points, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :description_1, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :description_1, :class => 'text_area' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :description_2, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :description_2, :class => 'text_area' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :description_3, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :description_3, :class => 'text_area' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label "Front Page?", :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :front_page, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label "URL for Front Page Photo", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :front_page_photo_url, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :contact_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :contact_name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :comments, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :comments, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                events_path, :class => 'btn' %>
  </div>
<% end %>
