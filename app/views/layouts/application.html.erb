<!DOCTYPE html>
<html>
<head>
  <title>Las Vegas Track Club</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
	<div class="navbar navbar-fixed-top">
	  <div class="navbar-inner">
	    <div class="container">
	      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
	        <span class="icon-bar"></span>
	        <span class="icon-bar"></span>
	        <span class="icon-bar"></span>
	      </a>
	      <a class="brand" href="/">Las Vegas Track Club</a>
	      <div class="nav-collapse">
	        <ul class="nav">
	          <li><%= link_to "Event PDF", events_path %></li>
	          <li><%= link_to "Price List" %></li>
	          <li><%= link_to "Cart" %></li>
	          <li><%= link_to "Contact Us" %></li>
	        </ul>
	      </div>
	    </div>
	  </div>
	</div>
	<div class="container">
	  <div class="row">
	    <div class="span9"><%= yield %></div>
	  	<div class="span3">
	      <h2>Calendar</h2>
	      <%= link_to "View PDF Calendar", pdf_schedule_path(:pdf) %>
	      <hr>
	      <div><% Event.future_events.limit(15).sort! {|a, b| a.date <=> b.date }.each do |event| %>  
		      <div class="text-info">
		      	<%= link_to raw('<i class="icon-ok-sign"></i>'), event.website%> <%= link_to event.event_title, "#{event.website}", :class => 'pinklink'%> <br>
			      	<%= event.date.strftime('%A, %B %d') %> at <%= event.time %>
			      <hr>
		      </div>
	      <% end %>
	    </div>
	  </div>
	</div>
</body>
</html>
