<%= form_for @user, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :first_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :first_name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :last_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :last_name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :street_address_1, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :street_address_1, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :street_address_2, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :street_address_2, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :city, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :city, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :state, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :state, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :zip_code, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :zip_code, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :gender, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :gender, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :email_address, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :email_address, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :home_phone, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :home_phone, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :cell_phone, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :cell_phone, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :work_phone, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :work_phone, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :user_kind, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :user_kind, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :user_membership_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :user_membership_id, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                users_path, :class => 'btn' %>
  </div>
<% end %>
